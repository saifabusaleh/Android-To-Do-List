<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.todo.saif.todo">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash Screen -->
        <activity
            android:name="com.todo.saif.todo.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Main Activity -->
        <activity android:name="com.todo.saif.todo.activity.MainActivity" />

        <receiver android:name="com.todo.saif.todo.activity.AlarmReceiver" />

        <service
            android:name="com.todo.saif.todo.activity.NotificationService"
            android:enabled="true" />

        <activity android:name="com.todo.saif.todo.activity.TaskActivity" />
        <activity android:name="com.todo.saif.todo.activity.AboutActivity"></activity>
    </application>

</manifest>